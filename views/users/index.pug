extends ../layout/common
block content
	h1
		span.mr-4 Users
		a.btn.btn-primary(href="/users/create") News
	.d-flex.align-items-center
		form.d-flex.ml-auto(action="/users/search",method="GET")
			input.form-control(type="text",name="q")
			button.btn.btn-primary.ml-2 search
	table.table
		tr
			th Name
			th Phone
			th Actions
		each user in users
			tr
				td=user.name
				td=user.phone
				td
					a.btn.btn-light(href='/users/'+user.id) View